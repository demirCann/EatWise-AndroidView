<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom style for black icons and text in AppBar -->
    <style name="CustomAppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/black</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="navigationIconTint">@android:color/black</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


</resources>