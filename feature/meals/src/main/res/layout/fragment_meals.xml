<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:label="@string/meals"
    tools:context=".fragment.MealsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/meals"
            app:menu="@menu/top_app_bar_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:paddingEnd="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/carousel"
                layout="@layout/carousel_layout" />

            <include
                android:id="@+id/breakfastSection"
                layout="@layout/meal_section_layout" />

            <include
                android:id="@+id/mainCourseSection"
                layout="@layout/meal_section_layout" />

            <include
                android:id="@+id/dessertSection"
                layout="@layout/meal_section_layout" />

            <include
                android:id="@+id/snackSection"
                layout="@layout/meal_section_layout" />

            <include
                android:id="@+id/soupSection"
                layout="@layout/meal_section_layout" />

            <include
                android:id="@+id/drinkSection"
                layout="@layout/meal_section_layout" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>